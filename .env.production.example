# Salesforce Pub/Sub Configuration
PUBSUB_HOST=api.pubsub.salesforce.com
PUBSUB_PORT=7443
LOGIN_URL=https://your-production-org.my.salesforce.com

# Salesforce Authentication (Username/Password OR Access Token/Tenant ID)
# Option 1: Username/Password Authentication
USERNAME=your_production_username
# PASSWORD = login_password + security_token
PASSWORD=your_production_password

# Option 2: Access Token Authentication (uncomment if using)
# TENANT_ID=your_tenant_id
# ACCESS_TOKEN=your_access_token

# Salesforce User Configuration
USER_ID=your_user_id

# Topic Configuration
TOPIC=/event/KodyPayment__e

# Optional: Replay Configuration (EARLIEST, LATEST, CUSTOM)
REPLAY_PRESET=LATEST
# REPLAY_ID=optional_replay_id_for_custom

# Kody Payment Integration Configuration
KODY_HOSTNAME=grpc-ap.kodypay.com
# API Key and Store ID are passed at runtime for security
# KODY_API_KEY=your_api_key_here
# KODY_STORE_ID=your_store_id_here